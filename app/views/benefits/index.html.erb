<h1>Listado de beneficios</h1>

<table class="table">
  <tr>
    <th>Nombre</th>
    <th>Inicio</th>
    <th>Fin</th>
    <th>Negocio</th>
    <th>Tipo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @benefits.each do |benefit| %>
  <tr>
    <td><%= benefit.name %></td>
    <td><%= benefit.begin_date %></td>
    <td><%= benefit.end_date %></td>
    <td><%= benefit.business.name %></td>
    <td><%= benefit.benefit_type.name %></td>
    <td><%= link_to 'Ver', benefit %></td>
    <td><%= link_to 'Modificar', edit_benefit_path(benefit) %></td>
    <td><%= link_to 'Elminiar', benefit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

